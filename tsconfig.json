{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "ES5",
      "ES6",
      "ES2015",
      "ES7",
      "ES2016",
      "ES2017",
      "ES2018",
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "ScriptHost",
      "ES2015.Core",
      "ES2015.Collection",
      "ES2015.Generator",
      "ES2015.Iterable",
      "ES2015.Promise",
      "ES2015.Proxy",
      "ES2015.Reflect",
      "ES2015.Symbol",
      "ES2015.Symbol.WellKnown",
      "ES2016.Array.Include",
      "ES2017.object",
      "ES2017.Intl",
      "ES2017.SharedMemory",
      "ES2017.TypedArrays",
      "ES2018.Intl",
      "ES2018.Promise",
      "ES2018.RegExp",
      "ESNext.AsyncIterable",
      "ESNext.Array"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "build",
    "removeComments": true,
    "strict": true,
    "target": "ES3"
  },
  "files": [
    "source/cli.ts",
    "source/index.ts"
  ]
